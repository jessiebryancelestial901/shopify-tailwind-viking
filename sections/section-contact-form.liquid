<section id="contact" class="py-16 lg:py-[5em] bg-black text-white">
    <div class="container px-10 mx-auto h-full">
        <div class="flex flex-wrap lg:flex-nowrap w-full justify-between h-full gap-10">

            <!-- LEFT COLUMN -->
            <div class="item item-one w-full lg:w-1/2 items-start content-start">
                {% if section.settings.section_title != blank %}
                    <h3 class="uppercase text-[52px] leading-[112%] font-[400]">
                        {{ section.settings.section_title }}
                    </h3>
                {% endif %}
            </div>

            <!-- RIGHT COLUMN -->
            <div class="item item-second w-full lg:w-1/2">
                {% if section.settings.section_text != blank %}
                    <p class="text-white text-[20px] mb-10 leading-snug">
                        {{ section.settings.section_text }}
                    </p>
                {% endif %}

                {% form 'contact', id: 'contact_form' %}
                    {% if form.posted_successfully? %}
                        <p class="text-green-400 mt-4">✅ Thank you! Your message has been sent.</p>
                    {% elsif form.errors %}
                        <p class="text-red-400 mt-4">⚠️ Please fix the errors below and try again.</p>
                    {% endif %}

                    <!-- INPUT STYLES -->
                    <div class="flex flex-wrap -mx-3 mb-6">
                        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                            <input
                                    type="text"
                                    name="contact[first_name]"
                                    id="ContactFormFirstName"
                                    placeholder="FIRST NAME"
                                    class="w-full bg-transparent border-b border-gray-600 py-3 px-0 text-white placeholder-gray-400 focus:outline-none focus:border-white transition-colors"
                                    required>
                        </div>

                        <div class="w-full md:w-1/2 px-3">
                            <input
                                    type="text"
                                    name="contact[last_name]"
                                    id="ContactFormLastName"
                                    placeholder="LAST NAME"
                                    class="w-full bg-transparent border-b border-gray-600 py-3 px-0 text-white placeholder-gray-400 focus:outline-none focus:border-white transition-colors">
                        </div>
                    </div>

                    <div class="flex flex-wrap -mx-3 mb-6">
                        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                            <input
                                    type="email"
                                    name="contact[email]"
                                    id="ContactFormEmail"
                                    placeholder="EMAIL"
                                    class="w-full bg-transparent border-b border-gray-600 py-3 px-0 text-white placeholder-gray-400 focus:outline-none focus:border-white transition-colors"
                                    required>
                        </div>

                        <div class="w-full md:w-1/2 px-3">
                            <input
                                    type="tel"
                                    name="contact[phone]"
                                    id="ContactFormPhone"
                                    placeholder="PHONE"
                                    class="w-full bg-transparent border-b border-gray-600 py-3 px-0 text-white placeholder-gray-400 focus:outline-none focus:border-white transition-colors">
                        </div>
                    </div>

                    <div class="flex flex-wrap -mx-3 mb-2">
                        <div class="w-full px-3 mb-6 md:mb-0">
              <textarea
                      name="contact[body]"
                      id="ContactFormBody"
                      placeholder="WHAT WOULD YOU LIKE TO HEAR ABOUT?"
                      class="w-full bg-transparent border-b border-gray-600 py-3 px-0 h-[150px] text-white placeholder-gray-400 focus:outline-none focus:border-white transition-colors"></textarea>
                        </div>
                    </div>

                    <div class="w-full mt-10">
                        <button
                                type="submit"
                                class="bg-white text-black font-bold text-[18px] px-[35px] py-[12px] uppercase transition-colors hover:bg-gray-200">
                            {{ section.settings.button_text }}
                        </button>
                    </div>
                {% endform %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Contact Form Section",
    "settings": [
        {
            "type": "text",
            "id": "section_title",
            "label": "Section Title",
            "default": "Register your Interest"
        },
        {
            "type": "textarea",
            "id": "section_text",
            "label": "Section Description",
            "default": "Be the first to experience Viking in Australia. Receive exclusive launch updates and product previews."
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Join the List"
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Background Color",
            "default": "#000000"
        }
    ],
    "presets": [
        {
            "name": "Contact Form Section",
            "category": "Contact"
        }
    ]
}
{% endschema %}

<section class="gallery pt-[30px] lg:pt-[100px] my-[15px] lg:my-[150px]">
    <div class="container w-full max-w-full mx-auto px-10">
        {% if section.settings.section_title != blank %}
            <div class="flex flex-nowrap w-full justify-between gap-10">
                <div class="item item-one w-full text-center">
                    <h3 class="text-white uppercase text-[40px] lg:text-[80px] leading-[112%] font-[400] uppercase">{{ section.settings.section_title }}</h3>
                </div>
            </div>
        {% endif %}
        <div class="mt-[20px] lg:mt-[60px] gallery-slider max-w-full mx-auto  pt-5 px-[15px]">
            <div class="slick-hero mx-auto flex items-center justify-center">
                {% for block in section.blocks %}
                    <div class="slide-item">
                        {% if block.settings.slide_image %}
                            <img src="{{ block.settings.slide_image | img_url: 'master' }}"
                                 alt="{{ block.settings.slide_title | escape }}">
                        {% endif %}

                        {% if block.settings.slide_title != blank %}
                            <h3>{{ block.settings.slide_title }}</h3>
                        {% endif %}

                        {% if block.settings.slide_text != blank %}
                            <p>{{ block.settings.slide_text }}</p>
                        {% endif %}

                        {% if block.settings.slide_link != blank %}
                            <a href="{{ block.settings.slide_link }}" class="slide-btn">Learn More</a>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>


<script>
	jQuery(document).ready(function ($) {

		const $slider = $('.slick-hero');
		if (!$slider.length) return;

		$slider.addClass('is-pre-init');

		function updatePositions(slick) {
			const $slides = $slider.find('.slick-slide');
			const slideCount = slick.slideCount;

			// LOGICAL current slide (0..count-1)
			const centerIndex = slick.currentSlide;

			$slides.removeClass(
				'post-1 post-2 post-3 post-4 post-5 ' +
				'is-prev-1 is-prev-2 is-next-1 is-next-2 is-center ' +
				'slide-big slide-medium slide-small'
			);

			$slides.each(function () {
				const $slide = $(this);
				const raw = parseInt($slide.attr('data-slick-index'), 10);

				if (isNaN(raw)) return;

				// convert clones → logical index
				const logical = ((raw % slideCount) + slideCount) % slideCount;

				// circular distance (handles last→first smoothly)
				let diff = logical - centerIndex;
				if (diff > slideCount / 2) diff -= slideCount;
				if (diff < -slideCount / 2) diff += slideCount;

				// Assign classes based on distance
				if (diff === 0) {
					$slide.addClass('post-3 slide-big is-center');
				} else if (diff === -1) {
					$slide.addClass('post-2 slide-medium is-prev-1');
				} else if (diff === -2) {
					$slide.addClass('post-1 slide-small is-prev-2');
				} else if (diff === 1) {
					$slide.addClass('post-4 slide-medium is-next-1');
				} else if (diff === 2) {
					$slide.addClass('post-5 slide-small is-next-2');
				} else {
					$slide.addClass('slide-small');
				}
			});
		}


		$slider.on('beforeChange', function (e, slick, current, next) {
			const last = slick.slideCount - 1;
			const first = 0;
			if ((current === last && next === first) ||
				(current === first && next === last)) {
				$slider.addClass('is-wrapping');
			}
		});

		$slider.on('init', function (e, slick) {
			updatePositions(slick);
			$slider.removeClass('is-pre-init');
		});

		$slider.on('afterChange', function (e, slick, current) {
			updatePositions(slick);
		});


		// INIT SLICK
		$slider.slick({
			centerMode: true,
			centerPadding: '15px',
			slidesToShow: 5,
			infinite: true,
			arrows: false,
			focusOnSelect: true,
			autoplay: true,
			autoplaySpeed: 2000,
			variableWidth: false,
			responsive: [
				{
					breakpoint: 1024,
					settings: {
						centerPadding: '10px',
						slidesToShow: 3,
						slidesToScroll: 3
					}
				},
				{
					breakpoint: 600,
					settings: {
						centerPadding: '5px',
						slidesToShow: 1,
						slidesToScroll: 1
					}
				}
			]
		});
	});

</script>

{% style %}

	/* hide slider until initialized */
	.slick-hero.is-pre-init {
	opacity: 0;
	}

	/* during wrap-around: disable transitions so it doesn't glitch */
	.slick-hero.is-wrapping .slick-slide {
	transition: none !important;
	-webkit-transition: none !important;
	}


{% endstyle %}

{% schema %}
{
    "name": "Slick Slider",
    "settings": [
        {
            "type": "text",
            "id": "section_title",
            "label": "Section Title",
            "default": "Featured Slider"
        }
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                { "type": "image_picker", "id": "slide_image", "label": "Image" },
                { "type": "text", "id": "slide_title", "label": "Title" },
                { "type": "textarea", "id": "slide_text", "label": "Description" },
                { "type": "url", "id": "slide_link", "label": "Link (optional)" }
            ]
        }
    ],
    "max_blocks": 10,
    "presets": [
        {
        "name": "Slick Slider",
        "category": "Image"
        }
    ]
}
{% endschema %}
